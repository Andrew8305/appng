log4j.rootLogger=trace, stdout
log4j.threshold=ALL

### direct log messages to stdout ###
log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=%d{ISO8601} %-5p [%t] %-30c: %m%n

### Hibernate logging options ###
log4j.logger.org.hibernate=warn
log4j.logger.org.hibernate.tool=warn
log4j.logger.org.hibernate.cfg=warn
log4j.logger.org.hibernate.type=warn
log4j.logger.org.dbunit=INFO
log4j.logger.p6spy=trace, stdout
log4j.logger.com=trace
log4j.logger.org.quartz=trace
log4j.logger.org.springframework=trace
log4j.logger.org.springframework.beans=info
log4j.logger.net-sf.saxon=trace
